<Page x:Class="IntroductionToWPF.GridDemo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntroductionToWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GridDemo">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Content="Click 1" ></Button>
        <Button Grid.Column="1" Grid.Row="1" Content="Click 2" ></Button>
        <Button Grid.Column="0" Grid.Row="1" Content="Click 3" ></Button>
        <Button Grid.Column="1" Grid.Row="0" Content="Click 4" ></Button>
    </Grid>
</Page>
