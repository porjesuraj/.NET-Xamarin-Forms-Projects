<Page x:Class="IntroductionToWPF.StackPanelDemo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntroductionToWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StackPanelDemo">

    <StackPanel Background="GhostWhite">
        <TextBlock HorizontalAlignment="Center" Margin="20" FontSize="30"  > Hello World!</TextBlock>
        <ListBox Height="170" Margin="300,0" >
            <ListBoxItem Content="Item 1" />
            <ListBoxItem Content="Item 2" />
            <ListBoxItem Content="Item 3" />
        </ListBox>
        <Button Content="Click me" Click="Button_Click"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"></Button>
    </StackPanel>
</Page>
