<Page x:Class="IntroductionToWPF.PasswordBoxDemo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntroductionToWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordBoxDemo">

    <StackPanel Margin="10">

        <Label>UserName: </Label>
        <TextBox Name="tbUserName"></TextBox>
        <Label> Password</Label>
        <PasswordBox MaxLength="8" PasswordChar="$"></PasswordBox>
        <Button Margin="5" Content="Log in" Click="LogInButtonClicked" />
    </StackPanel>
</Page>
