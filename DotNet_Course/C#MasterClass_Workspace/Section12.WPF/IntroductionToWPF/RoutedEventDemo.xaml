<Page x:Class="IntroductionToWPF.RoutedEventDemo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntroductionToWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoutedEventDemo">

    <StackPanel>
        <Button Content="Click for  Buubling event" 
                MouseUp="Button_MouseUp"              
                Click="Button_Click" Width="150" Height="100"></Button>
        <Button Content="Click for tunneling event" 
               PreviewMouseUp="Button_PreviewMouseUp"
                Click="Button_Click" Width="150" Height="100"></Button>

        <Button PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown"
                PreviewMouseRightButtonDown="Button_PreviewMouseRightButtonDown"
                Content="Preview Button for left and right" 
                Margin="10"
                HorizontalAlignment="Center" Height="100" />
    </StackPanel>
</Page>
