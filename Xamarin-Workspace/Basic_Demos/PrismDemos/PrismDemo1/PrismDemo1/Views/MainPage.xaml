<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="PrismDemo1.Views.MainPage"
             Title="{Binding LabelMessage}">

    <ContentPage.Resources>

        <Style TargetType="Button" >
            <Setter Property="TextColor" Value="WhiteSmoke" />
            <Setter Property="BackgroundColor" Value="#fa0543" />


        </Style>
    </ContentPage.Resources>
    <Frame BackgroundColor="#e5e8dc">
        <StackLayout  Spacing="5" Padding="5" Margin="70">


            <Button Text="PopUp Demo" Command="{Binding PopUpPageCommand}" />
            <Button Text="Dialog Demo" Command="{Binding DialogPageCommand}" />
            <Button Text="Rest Api Demo" Command="{Binding PostPageCommand}" />
            <Button Text="Rest Api Demo 1" Command="{Binding RestPageCommand}" />

        </StackLayout>

    </Frame>
</ContentPage>