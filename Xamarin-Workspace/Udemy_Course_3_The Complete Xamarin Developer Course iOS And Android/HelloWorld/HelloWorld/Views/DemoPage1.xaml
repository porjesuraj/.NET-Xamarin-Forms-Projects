<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Views.DemoPage1">
    <ContentPage.Content>
        <StackLayout Margin="16,0,16,0" HorizontalOptions="Center" VerticalOptions="Start" >

            <Label Text="Welcome to Xamarin.Forms" FontAttributes="Bold" FontSize="30" />

            <Entry x:Name="entry" Placeholder="Write Your Name" />
            <Button Text="Say hello " Clicked="Button_Clicked" />
            <Label x:Name="label" FontSize="Medium" HorizontalTextAlignment="Center" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>