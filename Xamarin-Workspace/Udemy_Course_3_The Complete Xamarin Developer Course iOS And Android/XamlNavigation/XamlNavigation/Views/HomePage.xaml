<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:pages="clr-namespace:XamlNavigation.Views" 
            
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="XamlNavigation.Views.HomePage" Title="HomePage" BackgroundColor="#323232" >
    <TabbedPage.BarBackgroundColor  >
        DodgerBlue
    </TabbedPage.BarBackgroundColor>
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Add" IconImageSource="plus.png" Order="Primary"   Command="{Binding AddCommand}" />
    </TabbedPage.ToolbarItems>

    <pages:HistoryPage Title="History " IconImageSource="home.png" />
    <!--<pages:MapPage Title="Map " IconImageSource="maps.png" />-->
    <pages:ProfilePage Title="Profile " IconImageSource="profile.png" />

    <pages:EssentialMap Title="Map " IconImageSource="map.png" />




</TabbedPage>