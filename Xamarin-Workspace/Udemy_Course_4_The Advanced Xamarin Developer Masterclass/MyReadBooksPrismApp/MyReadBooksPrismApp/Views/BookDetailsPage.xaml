<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyReadBooksPrismApp.Views.BookDetailsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" IsDestructive="True"  Command="{Binding DeleteBookCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.3*" />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>
            <Image Source="{Binding BookImageUrl}" Aspect="Fill" />
            <Label Grid.Row="1" Text="{Binding BookName}" FontSize="25" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Label  Grid.Row="2" Text="{Binding BookAuthor}" FontSize="20" TextColor="Green" HorizontalTextAlignment="Center" />
        
        </Grid>
    </ContentPage.Content>
</ContentPage>