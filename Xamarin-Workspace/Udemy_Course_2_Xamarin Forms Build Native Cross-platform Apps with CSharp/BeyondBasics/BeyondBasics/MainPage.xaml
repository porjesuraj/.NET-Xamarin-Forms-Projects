<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeyondBasics.MainPage" 
             Title="Beyond Basics">

    <ContentPage.Resources>

        <Style TargetType="Button" >
            <Setter Property="TextColor" Value="WhiteSmoke" />
            <Setter Property="BackgroundColor" Value="#E63427" />


        </Style>
    </ContentPage.Resources>
    <Frame   BackgroundColor="White">
        <StackLayout  Spacing="5" Padding="5" Margin="70">





            <Button Text="Resource Directory " Clicked="Button_Clicked"  />
            <Button Text="Styles Exercise " Clicked="Button_Clicked_1"  />
            <Button Text="Message Center " Clicked="Button_Clicked_2"  />

            <Slider x:Name="slider" Maximum="100" Minimum="0" />
            <Label x:Name="message" />


        </StackLayout>
    </Frame>
</ContentPage>