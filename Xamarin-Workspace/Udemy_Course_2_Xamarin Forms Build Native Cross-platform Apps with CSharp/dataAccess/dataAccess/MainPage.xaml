<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dataAccess.MainPage"
             Title="Data Access"
           >
    <ContentPage.Resources>

        <Style TargetType="Button" >
            <Setter Property="TextColor" Value="WhiteSmoke" />
            <Setter Property="BackgroundColor" Value="#E63427" />


        </Style>
    </ContentPage.Resources>
    <Frame   BackgroundColor="White">
        <StackLayout  Spacing="5" Padding="5" Margin="70">





            <Button Text="Properties in Page class " Clicked="Button_Clicked"  />
            <Button Text="Properties in App class " Clicked="Button_Clicked_1"  />
            <Button Text="Access File System" Clicked="Button_Clicked_2"  />
            <Button Text="SQLite Demo" Clicked="Button_Clicked_3"  />
            <Button Text="REST service Demo" Clicked="Button_Clicked_4"  />
           


        </StackLayout>
    </Frame>
</ContentPage>