<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dataAccess.DataPages.DataPage2">
    <TableView Intent="Settings" >
        <TableRoot>
            <TableSection Title="using application property" >
                <EntryCell x:Name="title" 
                    Label="title"
                           Text="{Binding Title}"
                          
                           Placeholder="(eg. Work related)" />
                <SwitchCell x:Name="notify"
                    Text="Notification" 
                            On="{Binding Notification}" 
                           
                            
                             />
            </TableSection>
            <TableSection Title="using Data binding to App" >
                <EntryCell 
                    Label="title"
                           Text="{Binding Title}"
                           
                           Placeholder="(eg. Work related)" />
                <SwitchCell 
                    Text="Notification" 
                            On="{Binding  Notification}" 
                           
                            
                             />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>