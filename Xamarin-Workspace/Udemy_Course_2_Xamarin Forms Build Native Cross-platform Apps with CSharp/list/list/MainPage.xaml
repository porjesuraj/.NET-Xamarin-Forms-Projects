<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="list.MainPage" 
             Title="List Demos">

    <ContentPage.Resources>

        <Style TargetType="Button" >
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="#2196F3" />

        </Style>
    </ContentPage.Resources>

    <StackLayout  Spacing="2" Padding="5">


        <Button Text="simple list page " Clicked="Button_Clicked"  />

        <Button Text="complex list page " Clicked="Button_Clicked_1"  />

        <Button Text="list page with selection " Clicked="Button_Clicked_2"  />

        <Button Text="list page with Context Action " Clicked="Button_Clicked_3"  />

        <Button Text="list page Exercise " Clicked="Button_Clicked_4"  />
    </StackLayout>

</ContentPage>
